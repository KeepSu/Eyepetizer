<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_tint</item>
        <item name="android:textColor">@drawable/text_seletor</item>
    </style>

    <style name="textSubtitle">//副标题的风格(16sp,加粗)
        <item name="android:textSize">@dimen/textsize_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textContentDescription">//图片下面描述内容的风格(16sp,加粗)
        <item name="android:textSize">@dimen/textsize_description</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="textDescription">//头部描述内容风格(12sp)
        <item name="android:textSize">@dimen/textsize_description</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">12</item>
    </style>
</resources>
