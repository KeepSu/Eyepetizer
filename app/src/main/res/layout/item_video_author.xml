<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_author"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <com.tzs.eyepetizer.view.PrinterTextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小企鹅"
            android:textColor="@color/text_light"
            android:textSize="13dp"
            android:textStyle="bold"
            app:typefacePath="fonts/FZLanTingHeiS-DB1-GB-Regular.TTF" />

        <com.tzs.eyepetizer.view.PrinterTextView
            android:id="@+id/tv_author_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingTop="4dp"
            android:text="世界超乎想象。。。"
            android:textColor="@color/text_light"
            android:textSize="@dimen/textsize_tint" />
    </LinearLayout>

    <com.tzs.eyepetizer.view.CustomFontTextView
        android:id="@+id/tv_follow"
        style="@style/SubTitleLight"
        android:background="@drawable/shape_bg_video_tint"
        android:padding="6dp"
        android:text="+ 关 注"
        android:textSize="@dimen/textsize_tint"
        app:typefacePath="fonts/FZLanTingHeiS-DB1-GB-Regular.TTF" />

</LinearLayout>
