<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.tzs.eyepetizer.fragment.DiscoverFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/discover_all_classify"
            android:textSize="@dimen/textsize_subtitle"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/discover_discover"
            android:textSize="@dimen/textsize_title"
            android:textStyle="italic|bold"
            android:typeface="serif"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_action_search"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <include layout="@layout/line_thin"/>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="208dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_Discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
