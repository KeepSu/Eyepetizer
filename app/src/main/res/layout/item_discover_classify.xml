<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:clipChildren="false">

    <include
        android:id="@+id/include"
        layout="@layout/line_divide"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_classify"
        android:layout_width="330dp"
        android:layout_height="260dp"
        android:clipChildren="false"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/classify_Icons"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/classify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开胃"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_title"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/classify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="眼球和味蕾，一个都不放过"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/classify_follow"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/discover_button_shape"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="+关注"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_description"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>